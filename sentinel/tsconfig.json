{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@lynx-js/react",
    "lib": ["dom", "es2020"],

    "module": "node18",
    "moduleResolution": "node16",

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true,

    "allowJs": true,
    "outDir": "./dist",
  },
  "exclude": ["dist/"],
  "include": ["src"],
}
